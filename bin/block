#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile" ''
  source normalize

  local nm_block="$1"; shift
  local ptr_block="_${nm_block}_home"
  cd "${!ptr_block}"
  exec "$@"
}

umask 022
if [[ "${PWD:0:${#BLOCK_PATH}}" != "$BLOCK_PATH" ]]; then
  export BLOCK_META=1
fi
if type -P sub >/dev/null; then
  source sub "$0" "$@"
fi
