#!/usr/bin/env bash4

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile" ''

  local nm_block="$1"; shift

  cd "${BOARD_PATH}"
  git submodule add -f "https://github.com/imma/${nm_block}" "work/${nm_block}"
  make lock
}

source sub "$0" "$@"
