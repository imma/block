#!/usr/bin/env bash4

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile" ''

  local nm_branch="$1"; shift
  
  git init
  block init
  git checkout -b "$nm_branch"
  git add .
  git commit -m 'initial commit'
  hub create "$(cat .repo-name)"
  git cc gh

  mv content/example.md "content/$(cat .repo-name).md"
  ln -nfs "content/$(cat .repo-name).md" README.md
}

source sub "$0" "$@"
